/**
 * Arquivo: tsconfig.jest.json
 * Caminho: src/config/jest/tsconfig.jest.json
 * Criado em: 2024-03-19
 * Última atualização: 2024-03-19
 * Descrição: Configuração do TypeScript para testes Jest
 */
{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../../src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../../src/**/*.ts",
    "../../../src/**/*.tsx",
    "../../../src/**/*.js",
    "../../../src/**/*.jsx"
  ],
  "exclude": ["node_modules"],
  "files": ["jest.setup.js"]
} 